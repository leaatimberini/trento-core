# =============================================================================
# TRENTO CORE - Variables de Entorno (Template)
# Copiar a .env y .env.production
# =============================================================================

# Base de Datos
DATABASE_URL="postgresql://postgres:password@localhost:5432/trento?schema=public"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=trento

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d

# AFIP (Facturación Electrónica)
AFIP_CUIT=30123456789
AFIP_CERT_PATH=/certs/afip.crt
AFIP_KEY_PATH=/certs/afip.key
AFIP_ENVIRONMENT=testing
# AFIP_ENVIRONMENT=production

# Ollama (IA Local)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Email
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USER=apikey
MAIL_PASSWORD=your_sendgrid_api_key
MAIL_FROM=noreply@tuempresa.com

# WhatsApp (Opcional)
WHATSAPP_ENABLED=false
# WHATSAPP_PHONE=5491112345678

# MercadoLibre (Opcional)
ML_CLIENT_ID=
ML_CLIENT_SECRET=
ML_REDIRECT_URI=http://localhost:3000/integrations/ml/callback

# TiendaNube (Opcional)
TN_STORE_ID=
TN_ACCESS_TOKEN=

# Servidor
PORT=3000
NODE_ENV=development
# NODE_ENV=production

# Uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Logs
LOG_LEVEL=info
# LOG_LEVEL=debug

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
